# ========================================
# CONFIGURATION MULTI-ENVIRONNEMENTS
# ========================================
# Copier ce fichier vers :
#   .env.local   - Développement local
#   .env.dev     - Serveur de développement  
#   .env.prod    - Production
# ========================================

# ENVIRONNEMENT (LOCAL, DEV, PROD)
NODE_ENV=LOCAL
ENVIRONMENT=LOCAL

# BINANCE API CONFIGURATION
# LOCAL/DEV: Utiliser TESTNET obligatoirement
# PROD: API réelle avec clés sécurisées
BINANCE_TESTNET=true
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET_KEY=your_secret_key_here

# TRADING CONFIGURATION
TRADING_SYMBOL=BTC/USDC
TRADING_TIMEFRAME=5m
TRADE_AMOUNT=50
ORDER_TIMEOUT=30000

# MODE DE TRADING
# INDICATORS = Bollinger + RSI (recommandé)
# OCO = Ordres automatiques
TRADING_MODE=INDICATORS

# PARAMÈTRES INDICATORS
STOP_LOSS_PERCENT=5.0
TAKE_PROFIT_PERCENT=5.0
EMERGENCY_STOP_LOSS_PERCENT=8.0

# PARAMÈTRES OCO
OCO_TAKE_PROFIT_PERCENT=3.0
OCO_STOP_LOSS_PERCENT=2.0

# INDICATEURS TECHNIQUES
TICK_INTERVAL=10000
RSI_PERIOD=14
BB_PERIOD=20
BB_STDDEV=2
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# SÉCURITÉ ET LIMITES
MAX_POSITION_COUNT=1
MIN_BALANCE_USDC=10
MAX_DAILY_TRADES=50

# BASE DE DONNÉES
DB_PATH=./trading-local.db

# LOGGING
LOG_LEVEL=debug
LOG_MAX_FILES=5
LOG_MAX_SIZE=5242880